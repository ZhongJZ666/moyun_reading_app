ror('只能上传jpg/png文件!');\r\n          return false;\r\n        }\r\n        const isLt2M = file.size / 1024 / 1024 < 2;\r\n        if (!isLt2M) {\r\n          this.$message.error('图片大小不能超过2MB!');\r\n          return false;\r\n        }\r\n        return true;\r\n      },\r\n      async handleSubmit() {\r\n        try {\r\n          this.loading = true\r\n          await this.$refs.recommendForm.validate()\r\n          await this.recommendBook(this.form)\r\n          this.$message.success('推荐成功！')\r\n          this.$router.push('/books')\r\n        } catch (error) {\r\n          this.$message.error(error.message)\r\n        } finally {\r\n          this.loading = false\r\n        }\r\n      }\r\n    }\r\n  }\r\n  </script>\r\n  \r\n  <style scoped>\r\n  .recommend-container {\r\n    padding: 20px;\r\n    max-width: 800px;\r\n    margin: 0 auto;\r\n  }\r\n  \r\n  .cover-preview {\r\n    margin-top: 10px;\r\n  }\r\n  \r\n  .cover-preview img {\r\n    max-width: 200px;\r\n    max-height: 300px;\r\n    border: 1px solid #ddd;\r\n  }\r\n  </style>"],"mappings":";AA8DE,SAASA,UAAS,QAAS,MAAK;AAEhC,eAAe;EACbC,IAAI,EAAE,eAAe;EACrBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,IAAI,EAAE;QACJC,KAAK,EAAE,EAAE;QACTC,MAAM,EAAE,EAAE;QACVC,SAAS,EAAE,EAAE;QACbC,WAAW,EAAE,EAAE;QACfC,OAAO,EAAE;MACX,CAAC;MACDC,KAAK,EAAE;QACLL,KAAK,EAAE,CACL;UAAEM,QAAQ,EAAE,IAAI;UAAEC,OAAO,EAAE,OAAO;UAAEC,OAAO,EAAE;QAAO,EACrD;QACDP,MAAM,EAAE,CACN;UAAEK,QAAQ,EAAE,IAAI;UAAEC,OAAO,EAAE,OAAO;UAAEC,OAAO,EAAE;QAAO,EACrD;QACDN,SAAS,EAAE,CACT;UAAEI,QAAQ,EAAE,IAAI;UAAEC,OAAO,EAAE,SAAS;UAAEC,OAAO,EAAE;QAAS,EACzD;QACDJ,OAAO,EAAE,CACP;UAAEE,QAAQ,EAAE,IAAI;UAAEC,OAAO,EAAE,SAAS;UAAEC,OAAO,EAAE;QAAO;MAE1D,CAAC;MACDC,OAAO,EAAE,KAAK;MACdC,aAAa,EAAE;QACbC,aAAa,EAAEC,YAAY,CAACC,OAAO,CAAC,OAAO,IAAI,SAAQ,GAAID,YAAY,CAACC,OAAO,CAAC,OAAO,IAAI;MAC7F;IACF;EACF,CAAC;EACDC,OAAO,EAAE;IACP,GAAGlB,UAAU,CAAC,OAAO,EAAE,CAAC,eAAe,CAAC,CAAC;IACzCmB,mBAAmBA,CAACC,GAAG,EAAE;MACvB,IAAIA,GAAG,CAACd,SAAS,EAAE;QACjB,IAAI,CAACH,IAAI,CAACG,SAAQ,GAAIc,GAAG,CAACd