{"ast":null,"code":"export default {\n  name: 'CreatePostForm',\n  props: {\n    bookId: {\n      type: [String, Number],\n      required: true\n    }\n  },\n  data() {\n    return {\n      postForm: {\n        title: '',\n        content: '',\n        tags: [],\n        bookId: null\n      },\n      rules: {\n        title: [{\n          required: true,\n          message: '请输入标题',\n          trigger: 'blur'\n        }, {\n          min: 2,\n          max: 50,\n          message: '长度在 2 到 50 个字符',\n          trigger: 'blur'\n        }],\n        content: [{\n          required: true,\n          message: '请输入内容',\n          trigger: 'blur'\n        }, {\n          min: 10,\n          message: '内容不能少于 10 个字符',\n          trigger: 'blur'\n        }]\n      },\n      availableTags: ['读书笔记', '书评', '读后感', '推荐', '讨论', '问答'],\n      submitting: false\n    };\n  },\n  created() {\n    // 设置书籍ID\n    this.postForm.bookId = this.bookId;\n  },\n  methods: {\n    async submitForm() {\n      if (!this.$refs.postForm) return;\n      try {\n        await this.$refs.postForm.validate();\n        this.submitting = true;\n        await this.$emit('submit', this.postForm);\n        this.$message.success('发布成功');\n        this.resetForm();\n      } catch (error) {\n        console.error('表单提交失败:', error);\n        this.$message.error(error.message || '发布失败，请重试');\n      } finally {\n        this.submitting = false;\n      }\n    },\n    resetForm() {\n      if (this.$refs.postForm) {\n        this.$refs.postForm.resetFields();\n        // 保持书籍ID不变\n        this.postForm.bookId = this.bookId;\n      }\n    }\n  }\n};","map":{"version":3,"names":["name","props","bookId","type","String","Number","required","data","postForm","title","content","tags","rules","message","trigger","min","max","availableTags","submitting","created","methods","submitForm","$refs","validate","$emit","$message","success","resetForm","error","console","resetFields"],"sources":["C:\\Users\\仲佳泽\\Desktop\\大学作业\\软件工程\\moyun-reading-platform\\frontend\\src\\components\\post\\CreatePostForm.vue"],"sourcesContent":["<template>\r\n  <div class=\"create-post-form\">\r\n    <el-form :model=\"postForm\" :rules=\"rules\" ref=\"postForm\" label-width=\"80px\">\r\n      <el-form-item label=\"标题\" prop=\"title\">\r\n        <el-input v-model=\"postForm.title\" placeholder=\"请输入标题\"></el-input>\r\n      </el-form-item>\r\n      \r\n      <el-form-item label=\"内容\" prop=\"content\">\r\n        <el-input\r\n          type=\"textarea\"\r\n          v-model=\"postForm.content\"\r\n          :rows=\"6\"\r\n          placeholder=\"请输入内容\"\r\n        ></el-input>\r\n      </el-form-item>\r\n\r\n      <el-form-item label=\"标签\" prop=\"tags\">\r\n        <el-select\r\n          v-model=\"postForm.tags\"\r\n          multiple\r\n          filterable\r\n          allow-create\r\n          default-first-option\r\n          placeholder=\"请选择或创建标签\"\r\n        >\r\n          <el-option\r\n            v-for=\"tag in availableTags\"\r\n            :key=\"tag\"\r\n            :label=\"tag\"\r\n            :value=\"tag\"\r\n          ></el-option>\r\n        </el-select>\r\n      </el-form-item>\r\n\r\n      <el-form-item>\r\n        <el-button type=\"primary\" @click=\"submitForm\" :loading=\"submitting\">发布</el-button>\r\n        <el-button @click=\"resetForm\">重置</el-button>\r\n      </el-form-item>\r\n    </el-form>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: 'CreatePostForm',\r\n  props: {\r\n    bookId: {\r\n      type: [String, Number],\r\n      required: true\r\n    }\r\n  },\r\n  data() {\r\n    return {\r\n      postForm: {\r\n        title: '',\r\n        content: '',\r\n        tags: [],\r\n        bookId: null\r\n      },\r\n      rules: {\r\n        title: [\r\n          { required: true, message: '请输入标题', trigger: 'blur' },\r\n          { min: 2, max: 50, message: '长度在 2 到 50 个字符', trigger: 'blur' }\r\n        ],\r\n        content: [\r\n          { required: true, message: '请输入内容', trigger: 'blur' },\r\n          { min: 10, message: '内容不能少于 10 个字符', trigger: 'blur' }\r\n        ]\r\n      },\r\n      availableTags: ['读书笔记', '书评', '读后感', '推荐', '讨论', '问答'],\r\n      submitting: false\r\n    }\r\n  },\r\n  created() {\r\n    // 设置书籍ID\r\n    this.postForm.bookId = this.bookId\r\n  },\r\n  methods: {\r\n    async submitForm() {\r\n      if (!this.$refs.postForm) return\r\n\r\n      try {\r\n        await this.$refs.postForm.validate()\r\n        this.submitting = true\r\n        await this.$emit('submit', this.postForm)\r\n        this.$message.success('发布成功')\r\n        this.resetForm()\r\n      } catch (error) {\r\n        console.error('表单提交失败:', error)\r\n        this.$message.error(error.message || '发布失败，请重试')\r\n      } finally {\r\n        this.submitting = false\r\n      }\r\n    },\r\n    resetForm() {\r\n      if (this.$refs.postForm) {\r\n        this.$refs.postForm.resetFields()\r\n        // 保持书籍ID不变\r\n        this.postForm.bookId = this.bookId\r\n      }\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.create-post-form {\r\n  max-width: 800px;\r\n  margin: 0 auto;\r\n  padding: 20px;\r\n}\r\n</style> "],"mappings":"AA2CA,eAAe;EACbA,IAAI,EAAE,gBAAgB;EACtBC,KAAK,EAAE;IACLC,MAAM,EAAE;MACNC,IAAI,EAAE,CAACC,MAAM,EAAEC,MAAM,CAAC;MACtBC,QAAQ,EAAE;IACZ;EACF,CAAC;EACDC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE;QACRC,KAAK,EAAE,EAAE;QACTC,OAAO,EAAE,EAAE;QACXC,IAAI,EAAE,EAAE;QACRT,MAAM,EAAE;MACV,CAAC;MACDU,KAAK,EAAE;QACLH,KAAK,EAAE,CACL;UAAEH,QAAQ,EAAE,IAAI;UAAEO,OAAO,EAAE,OAAO;UAAEC,OAAO,EAAE;QAAO,CAAC,EACrD;UAAEC,GAAG,EAAE,CAAC;UAAEC,GAAG,EAAE,EAAE;UAAEH,OAAO,EAAE,gBAAgB;UAAEC,OAAO,EAAE;QAAO,EAC/D;QACDJ,OAAO,EAAE,CACP;UAAEJ,QAAQ,EAAE,IAAI;UAAEO,OAAO,EAAE,OAAO;UAAEC,OAAO,EAAE;QAAO,CAAC,EACrD;UAAEC,GAAG,EAAE,EAAE;UAAEF,OAAO,EAAE,eAAe;UAAEC,OAAO,EAAE;QAAO;MAEzD,CAAC;MACDG,aAAa,EAAE,CAAC,MAAM,EAAE,IAAI,EAAE,KAAK,EAAE,IAAI,EAAE,IAAI,EAAE,IAAI,CAAC;MACtDC,UAAU,EAAE;IACd;EACF,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR;IACA,IAAI,CA