# ========================
# 数据库配置
# ========================
DB_HOST=localhost         # 数据库主机（开发环境用localhost，生产环境用mysql）
DB_PORT=3306             # 数据库端口
DB_USER=root             # 数据库用户名
DB_PASSWORD=rootpassword # 数据库密码
DB_NAME=moyun_reading    # 数据库名称

# ========================
# 应用配置
# ========================
PORT=3000                # 后端服务端口
NODE_ENV=development     # 环境模式 (development/production)
JWT_SECRET=your_jwt_secret_here # JWT加密密钥（至少32位随机字符串）
JWT_EXPIRES_IN=24h       # Token有效期 (格式：数字+单位，如 60s, 2h, 7d)

# ========================
# 邮件服务（可选）
# ========================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
EMAIL_FROM='"墨韵读书会" <noreply@moyun.com>'

# ========================
# 文件上传（可选）
# ========================
UPLOAD_DIR=./uploads     # 文件上传目录
MAX_FILE_SIZE=10         # 文件大小限制(MB)
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ========================
# 管理员初始化（首次运行后可以删除）
# ========================
ADMIN_EMAIL=admin@moyun.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123